<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.orm_final.controller.PaymentFormController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #c1856d, #9a3f3f);">

    <children>
        <!-- Header -->
        <HBox layoutX="40.0" layoutY="25.0" spacing="15.0"
              style="-fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 15; -fx-padding: 15;">
            <children>
                <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/asset-management.gif"/>
                    </image>
                </ImageView>

                <Label text="Payment Management" textFill="white">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Form Card -->
        <VBox layoutX="60.0" layoutY="130.0" spacing="20.0" alignment="TOP_CENTER"
              style="-fx-background-color: #f3ede8; -fx-background-radius: 15; -fx-padding: 30;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);"
              prefWidth="680" prefHeight="380">

            <GridPane hgap="15" vgap="18">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="180"/>
                    <ColumnConstraints minWidth="300"/>
                </columnConstraints>

                <!-- Payment ID -->
                <Label text="Payment ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPaymentId" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1; -fx-padding: 6;"/>

                <!-- Student -->
                <Label text="Student:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbStudent" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"
                          style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1;"/>

                <!-- Program -->
                <Label text="Program:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbProgram" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="250"
                          style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1;"/>

                <!-- Amount -->
                <Label text="Amount (LKR):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAmount" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1; -fx-padding: 6;"/>

                <!-- Payment Date -->
                <Label text="Payment Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpPaymentDate" GridPane.rowIndex="4" GridPane.columnIndex="1"
                            style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1;"/>

                <!-- Status -->
                <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbStatus" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="250"
                          style="-fx-background-radius: 10; -fx-border-color: #9a3f3f; -fx-border-width: 1;"/>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="💳 Make Payment" fx:id="btnMakePayment" onAction="#btnMakePaymentOnAction"
                        style="-fx-background-color: #228B22; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 16; -fx-font-size: 14;"/>
                <Button text="❌ Cancel" fx:id="btnCancel" onAction="#btnCancelOnAction"
                        style="-fx-background-color: #E41B17; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 16; -fx-font-size: 14;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
