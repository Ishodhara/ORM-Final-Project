<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="fullLoginForm" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #d4fc79, #96e6a1);"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.LoginFormController">
    <children>

        <!-- Background Image -->
        <ImageView fitHeight="400.0" fitWidth="614.0" layoutY="1.0" opacity="0.85" preserveRatio="true">
            <image>
                <Image url="@images/Driving School Background.jpg" />
            </image>
        </ImageView>

        <!-- Login Box -->
        <AnchorPane fx:id="loginForm" layoutX="111.0" layoutY="26.0" prefHeight="350.0" prefWidth="350.0"
                    style="-fx-background-color: white;
                           -fx-background-radius: 20;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 15, 0, 0, 8);">
            <children>
                <!-- Title -->
                <Label layoutX="135.0" layoutY="20.0" text="🔐 Login" textFill="#2e7d32">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>

                <!-- Username -->
                <TextField fx:id="inputUserName" layoutX="55.0" layoutY="80.0" onAction="#inputUserNameOnAction"
                           prefHeight="40.0" prefWidth="240.0" promptText="👤 Username"
                           style="-fx-background-color:#f9f9f9;
                                  -fx-background-radius: 12;
                                  -fx-border-color: #c8e6c9;
                                  -fx-border-radius: 12;
                                  -fx-padding: 0 0 0 8;" />

                <!-- Password -->
                <PasswordField fx:id="inputPassword" layoutX="55.0" layoutY="140.0" onAction="#inputPasswordOnAction"
                               prefHeight="40.0" prefWidth="240.0" promptText="🔒 Password"
                               style="-fx-background-color:#f9f9f9;
                                      -fx-background-radius: 12;
                                      -fx-border-color: #c8e6c9;
                                      -fx-border-radius: 12;
                                      -fx-padding: 0 0 0 8;" />

                <!-- Login Button -->
                <Button layoutX="85.0" layoutY="210.0" mnemonicParsing="false" onAction="#loginOnAction"
                        prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063);
                               -fx-background-radius: 22;
                               -fx-font-size: 14px;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;"
                        text="➡️ LOGIN" textFill="white" />

                <!-- Signup Redirect -->
                <Text fill="#4e342e" layoutX="70.0" layoutY="290.0" text="Don't have an account?" />
                <Text fill="#2e7d32" layoutX="220.0" layoutY="290.0" onMouseClicked="#goToSignUpOnAction"
                      style="-fx-cursor: hand;" text="Sign Up ➕" underline="true">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
