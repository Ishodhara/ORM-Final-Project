<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="signUpForm" prefHeight="400.0" prefWidth="360.0"
            style="-fx-background-color: linear-gradient(to bottom, #c1856d, #9a3f3f);"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.SignUpFormController">

    <children>
        <!-- Card Container -->
        <AnchorPane layoutX="25.0" layoutY="40.0" prefHeight="320.0" prefWidth="310.0"
                    style="-fx-background-color: #f3ede8; -fx-background-radius: 20;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
            <children>
                <!-- Title -->
                <Label layoutX="95.0" layoutY="20.0" text="Sign Up" textFill="#9a3f3f">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="inputUserName" layoutX="35.0" layoutY="80.0" onAction="#inputUserNameOnAction"
                           prefHeight="40.0" prefWidth="240.0" promptText="User Name"
                           style="-fx-background-radius: 12; -fx-border-color: #9a3f3f; -fx-border-radius: 12;"/>

                <!-- Password Field -->
                <PasswordField fx:id="inputPassword" layoutX="35.0" layoutY="135.0"
                               prefHeight="40.0" prefWidth="240.0" promptText="Password"
                               style="-fx-background-radius: 12; -fx-border-color: #9a3f3f; -fx-border-radius: 12;"/>

                <!-- Role Checkboxes -->
                <CheckBox fx:id="adminCheckBox" layoutX="35.0" layoutY="190.0" mnemonicParsing="false"
                          onAction="#adminCheckBoxOnAction" text="Admin" textFill="#57564f">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </CheckBox>

                <CheckBox fx:id="admissionCheckBox" layoutX="140.0" layoutY="190.0" mnemonicParsing="false"
                          onAction="#admissionCheckBoxOnAction" text="Receptionist" textFill="#57564f">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </CheckBox>

                <!-- Sign Up Button -->
                <Button layoutX="90.0" layoutY="240.0" mnemonicParsing="false" onAction="#signUpBtnOnAction"
                        prefHeight="40.0" prefWidth="130.0"
                        style="-fx-background-color: #468A9A; -fx-background-radius: 20; -fx-cursor: hand; -fx-text-fill: white;"
                        text="SIGN UP">
                    <font>
                        <Font name="Arial Bold" size="15.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <!-- Back Button (Top Left Corner) -->
        <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="15.0" layoutY="15.0" onMouseClicked="#backToLoginOnAction"
                   pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
            <image>
                <Image url="@images/left-arrow.gif" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
