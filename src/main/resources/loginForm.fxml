<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="fullLoginForm" prefHeight="420.0" prefWidth="650.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ff9a9e, #ff6a00);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.LoginFormController">
    <children>

        <!-- Optional Background Image with light overlay -->
        <ImageView fitHeight="420.0" fitWidth="650.0" opacity="0.18" preserveRatio="true">
            <image>
                <Image url="@images/Driving School Background.jpg" />
            </image>
        </ImageView>

        <!-- Glassmorphism Login Box -->
        <AnchorPane fx:id="loginForm" layoutX="150.0" layoutY="40.0"
                    prefHeight="340.0" prefWidth="350.0"
                    style="-fx-background-color: rgba(255,255,255,0.92);
                           -fx-background-radius: 20;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 10);">
            <children>
                <!-- Title -->
                <Label layoutX="120.0" layoutY="25.0" text="🔐 Login"
                       textFill="#e65100">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>

                <!-- Username -->
                <TextField fx:id="inputUserName" layoutX="55.0" layoutY="90.0"
                           onAction="#inputUserNameOnAction"
                           prefHeight="45.0" prefWidth="240.0"
                           promptText="👤  Username"
                           style="-fx-background-color: #fefefe;
                                  -fx-background-radius: 12;
                                  -fx-border-color: #f4a261;
                                  -fx-border-radius: 12;
                                  -fx-padding: 0 0 0 10;
                                  -fx-font-size: 13px;" />

                <!-- Password -->
                <PasswordField fx:id="inputPassword" layoutX="55.0" layoutY="150.0"
                               onAction="#inputPasswordOnAction"
                               prefHeight="45.0" prefWidth="240.0"
                               promptText="🔒  Password"
                               style="-fx-background-color: #fefefe;
                                      -fx-background-radius: 12;
                                      -fx-border-color: #f4a261;
                                      -fx-border-radius: 12;
                                      -fx-padding: 0 0 0 10;
                                      -fx-font-size: 13px;" />

                <!-- Login Button -->
                <Button layoutX="85.0" layoutY="220.0"
                        mnemonicParsing="false" onAction="#loginOnAction"
                        prefHeight="48.0" prefWidth="180.0"
                        style="-fx-background-color: linear-gradient(to right, #ff6a00, #ff3d7f);
                               -fx-background-radius: 24;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;"
                        text="➡️  LOGIN"
                        textFill="white" />

                <!-- Signup Redirect -->
                <Text fill="#5d4037" layoutX="70.0" layoutY="300.0"
                      text="Don't have an account?" />
                <Text fill="#d84315" layoutX="225.0" layoutY="300.0"
                      onMouseClicked="#goToSignUpOnAction"
                      style="-fx-cursor: hand;"
                      text="Sign Up ➕" underline="true">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
