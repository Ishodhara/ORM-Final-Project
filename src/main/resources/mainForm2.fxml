<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardFrom" prefHeight="650.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to right, #c1856d, #9a3f3f);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.MainForm2Controller">

    <children>

        <!-- Right Content Area -->
        <AnchorPane fx:id="changeForm" layoutX="219.0" layoutY="10.0" prefHeight="630.0" prefWidth="770.0"
                    style="-fx-background-color: #ffffff;
                           -fx-background-radius: 15;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" />

        <!-- Logo -->
        <ImageView fitHeight="133.0" fitWidth="188.0" layoutX="26.0" layoutY="23.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/dashboard logo.jpg" />
            </image>
        </ImageView>

        <!-- Sidebar Menu -->
        <VBox layoutX="12.0" layoutY="186.0" prefHeight="343.0" prefWidth="195.0" spacing="12.0"
              style="-fx-background-color: rgba(255,255,255,0.15);
                     -fx-background-radius: 15; -fx-padding: 10;">
            <children>

                <JFXButton fx:id="btnDashboard" onAction="#btnDashboardOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Dashboard">
                    <font>
                        <Font name="Arial Bold" size="16.0"/>
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnStudent" onAction="#btnStudentOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Manage Student" />

                <JFXButton fx:id="btnProgram" onAction="#btnProgramOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Manage Course" />

                <JFXButton fx:id="btnInstructor" onAction="#btnInstructorOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Manage Instructor" />

                <JFXButton fx:id="btnPayment" onAction="#btnPaymentOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Manage Payment" />

                <JFXButton fx:id="btnLessons" onAction="#btnLessonsOnAction"
                           prefHeight="50.0" prefWidth="199.0"
                           style="-fx-background-color: transparent;
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-cursor: hand;"
                           text="Manage Lessons" />

            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>

        <!-- Logout Icon -->
        <ImageView fitHeight="35.0" fitWidth="35.0"
                   layoutX="92.0" layoutY="553.0"
                   onMouseClicked="#logOutAction"
                   pickOnBounds="true" preserveRatio="true"
                   style="-fx-cursor: hand;">
            <image>
                <Image url="@images/logout.gif" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
