<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="courseForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom, #c1856d, #9a3f3f);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.CourseFormController">

    <children>
        <!-- Header -->
        <Label layoutX="113.0" layoutY="46.0" prefHeight="37.0" prefWidth="350.0" text="Course Management">
            <font>
                <Font name="Segoe UI Bold" size="30.0" />
            </font>
            <style>
                -fx-text-fill: #b23a48;
            </style>
        </Label>
        <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="45.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/online-education.gif" />
        </ImageView>

        <!-- Input Fields -->
        <TextField fx:id="txtCourseId" layoutX="128.0" layoutY="138.0" />
        <TextField fx:id="txtCourseName" layoutX="128.0" layoutY="195.0" />
        <TextField fx:id="txtDuration" layoutX="128.0" layoutY="248.0" />
        <TextField fx:id="txtFee" layoutX="128.0" layoutY="307.0" />
        <TextField fx:id="txtDescription" layoutX="129.0" layoutY="367.0" prefWidth="250.0" />

        <!-- Labels -->
        <Label layoutX="57.0" layoutY="142.0" text="Course ID :" style="-fx-text-fill: #5a2a27;">
            <font><Font name="DejaVu Sans Condensed Bold" size="13.0" /></font>
        </Label>
        <Label layoutX="57.0" layoutY="199.0" text="Name :" style="-fx-text-fill: #5a2a27;">
            <font><Font name="DejaVu Sans Condensed Bold" size="13.0" /></font>
        </Label>
        <Label layoutX="57.0" layoutY="252.0" text="Duration :" style="-fx-text-fill: #5a2a27;">
            <font><Font name="DejaVu Sans Condensed Bold" size="13.0" /></font>
        </Label>
        <Label layoutX="57.0" layoutY="311.0" text="Fee :" style="-fx-text-fill: #5a2a27;">
            <font><Font name="DejaVu Sans Condensed Bold" size="13.0" /></font>
        </Label>
        <Label layoutX="57.0" layoutY="370.0" text="Description :" style="-fx-text-fill: #5a2a27;">
            <font><Font name="DejaVu Sans Condensed Bold" size="13.0" /></font>
        </Label>

        <!-- Table -->
        <TableView fx:id="tblCourse" layoutX="57.0" layoutY="410.0"
                   onMouseClicked="#tblCourseOnClickAction"
                   prefHeight="200.0" prefWidth="656.0"
                   style="-fx-background-color: #fff5f0; -fx-border-color: #ff7043;">
            <columns>
                <TableColumn fx:id="colCourseId" prefWidth="100.0" text="Course ID" />
                <TableColumn fx:id="colCourseName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colDuration" prefWidth="120.0" text="Duration" />
                <TableColumn fx:id="colFee" prefWidth="120.0" text="Fee" />
                <TableColumn fx:id="colDescription" prefWidth="160.0" text="Description" />
            </columns>
        </TableView>

        <!-- Buttons -->
        <JFXButton layoutX="627.0" layoutY="361.0" onAction="#btnSaveOnAction"
                   prefHeight="35.0" prefWidth="85.0"
                   style="-fx-background-color: #f57c00; -fx-background-radius: 8;"
                   text="Save" textFill="WHITE">
            <font><Font name="DejaVu Serif Bold" size="15.0" /></font>
        </JFXButton>

        <JFXButton layoutX="527.0" layoutY="361.0" onAction="#btnDeleteOnAction"
                   prefHeight="35.0" prefWidth="85.0"
                   style="-fx-background-color: #d84315; -fx-background-radius: 8;"
                   text="Delete" textFill="WHITE">
            <font><Font name="DejaVu Serif Bold" size="15.0" /></font>
        </JFXButton>

        <JFXButton layoutX="427.0" layoutY="361.0" onAction="#btnUpdateOnAction"
                   prefHeight="35.0" prefWidth="85.0"
                   style="-fx-background-color: #ef6c00; -fx-background-radius: 8;"
                   text="Update" textFill="WHITE">
            <font><Font name="DejaVu Serif Bold" size="15.0" /></font>
        </JFXButton>

        <JFXButton layoutX="327.0" layoutY="361.0" onAction="#btnClearOnAction"
                   prefHeight="35.0" prefWidth="85.0"
                   style="-fx-background-color: #8d6e63; -fx-background-radius: 8;"
                   text="Clear" textFill="WHITE">
            <font><Font name="DejaVu Serif Bold" size="15.0" /></font>
        </JFXButton>
    </children>
</AnchorPane>
